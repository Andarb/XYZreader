<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/detail_cardview_margin">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/up_icon"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/icon_start_end_margin"
            android:layout_marginTop="@dimen/icon_top_margin"
            android:contentDescription="@string/up"
            android:src="@drawable/ic_arrow_back" />

        <ImageView
            android:id="@+id/share_icon"
            style="@style/icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/icon_start_end_margin"
            android:layout_marginTop="@dimen/icon_top_margin"
            android:contentDescription="@string/action_share"
            android:src="@drawable/ic_share" />

    </android.support.v7.widget.CardView>

</FrameLayout>